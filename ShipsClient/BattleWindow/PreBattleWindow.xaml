        <Canvas HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="266" Margin="342,14,0,0" Grid.Row="1">
            <Canvas.Background>
                <ImageBrush ImageSource="/ShipsClient;component/Resources/Other/res_big_ship.png"/>
